{
    "name": "Drawing"
  , "description": "Drowing on any website."
  , "version": "0.1.0"
  , "permissions": [
      "http://*/*"
    , "https://*/*"
    , "tabs"
  ]
  , "icons": {
      "16": "icon16.png"
    , "48": "icon48.png"
    , "128": "icon128.png"
  }
  , "browser_action": {
      "default_icon": "icon19.png"
    , "default_title": "drawing"
    , "default_popup": "popup.html"
  }
  , "content_scripts": [
      {
          "js": [ "script.js" ]
        , "run_at": "document_end"
        , "matches": [ "http://*/*", "https://*/*" ]
      }
  ]
}
